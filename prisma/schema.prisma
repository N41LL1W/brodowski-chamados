generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// TABELA DE CARGOS DINÂMICA
model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

// TABELA DE NÍVEIS DINÂMICA
model Level {
  id    Int    @id @default(autoincrement())
  name  String @unique
  rank  Int    @default(1)
  users User[]
}

model User {
  id              String    @id @default(cuid())
  name            String?
  email           String?   @unique
  passwordHash    String?
  emailVerified   DateTime?
  image           String?
  
  // Campo de texto original
  role            String    @default("FUNCIONARIO")

  // RELAÇÕES NOVAS
  roleId          Int?
  roleRelation    Role?     @relation(fields: [roleId], references: [id])

  levelId         Int?
  levelRelation   Level?    @relation(fields: [levelId], references: [id])

  // Relações com chamados
  tickets          Ticket[]  @relation("CreatedBy")
  assignedTickets  Ticket[]  @relation("AssignedTo")
  
  accounts         Account[]
  sessions         Session[]
}

// Categorias (Ex: Internet, Impressora)
model Category {
  id      String   @id @default(cuid())
  name    String
  icon    String   @default("Wrench")
  tickets Ticket[]
}

// Secretarias/Departamentos (Ex: Saúde, Educação)
model Department {
  id      String   @id @default(cuid())
  name    String
  tickets Ticket[]
}

// O Chamado (Ticket) - VERSÃO ÚNICA E CORRIGIDA
model Ticket {
  id            String     @id @default(cuid())
  protocol      String     @unique 
  subject       String
  description   String
  status        String     @default("ABERTO") 
  priority      String     @default("NORMAL") 
  
  // Relações
  category      Category   @relation(fields: [categoryId], references: [id])
  categoryId    String
  department    Department @relation(fields: [departmentId], references: [id])
  departmentId  String
  
  // Quem criou o chamado
  requester     User       @relation("CreatedBy", fields: [requesterId], references: [id])
  requesterId   String

  // Quem vai atender (opcional no início)
  assignedTo    User?      @relation("AssignedTo", fields: [assignedToId], references: [id])
  assignedToId  String?

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}