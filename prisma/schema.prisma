generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// --- MODELOS DE NEGÓCIO ---

model Ticket {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  status       String   @default("Aberto")
  priority     String   @default("normal")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relacionamento com quem ABRIU o chamado (Solicitante)
  userId       String
  user         User     @relation("CreatedBy", fields: [userId], references: [id])

  // Relacionamento com o TÉCNICO (Opcional até ser atribuído)
  assignedToId String?
  assignedTo   User?    @relation("AssignedTo", fields: [assignedToId], references: [id])
}

// --- MODELOS DE AUTENTICAÇÃO (Auth.js) ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  passwordHash  String?
  emailVerified DateTime?
  image         String?
  role          String    @default("FUNCIONARIO")
  
  // Relacionamentos inversos
  tickets         Ticket[] @relation("CreatedBy")
  assignedTickets Ticket[] @relation("AssignedTo")

  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}