datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Ticket {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  requester   String
  status      String   @default("open")
  priority    String   @default("normal")
  createdAt   DateTime @default(now())
}